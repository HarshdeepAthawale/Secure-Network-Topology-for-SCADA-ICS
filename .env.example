# SCADA Topology Discovery - Environment Configuration

# Application
NODE_ENV=development
LOG_LEVEL=info
APP_NAME=scada-topology-discovery

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# AWS IoT Core
IOT_ENDPOINT=your-iot-endpoint.iot.us-east-1.amazonaws.com
IOT_TOPIC_TELEMETRY=scada/telemetry
IOT_TOPIC_ALERTS=scada/alerts
IOT_CERT_PATH=./certs/device.pem.crt
IOT_KEY_PATH=./certs/private.pem.key
IOT_CA_PATH=./certs/root-CA.crt

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scada_topology
DB_USER=scada_admin
DB_PASSWORD=your_secure_password
DB_SSL=true
DB_POOL_SIZE=10

# SNMPv3 Configuration
SNMP_AUTH_PROTOCOL=SHA
SNMP_PRIV_PROTOCOL=AES
SNMP_SECURITY_LEVEL=authPriv
SNMP_COMMUNITY=public
SNMP_TIMEOUT=5000
SNMP_RETRIES=3

# Collector Settings
COLLECTOR_POLL_INTERVAL=60000
COLLECTOR_BATCH_SIZE=100
COLLECTOR_MAX_CONCURRENT=10

# Syslog Configuration
SYSLOG_PORT=514
SYSLOG_PROTOCOL=udp

# NetFlow Configuration
NETFLOW_PORT=2055
NETFLOW_VERSION=9

# Security
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key
TLS_MIN_VERSION=TLSv1.3

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# Alerting
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_SMTP_HOST=smtp.example.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_FROM=alerts@example.com
ALERT_EMAIL_TO=admin@example.com
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
