          "format": "table",
          "group": [],
          "metricColumn": "none",
          "rawQuery": true,
          "rawSql": "SELECT\n  a.id,\n  a.created_at as created_at,\n  CASE\n    WHEN a.resolved THEN 'Resolved'\n    WHEN a.acknowledged THEN 'Acknowledged'\n    ELSE 'Created'\n  END as status,\n  EXTRACT(EPOCH FROM (COALESCE(a.resolved_at, NOW()) - a.created_at))::int/60 as ttf_minutes,\n  EXTRACT(EPOCH FROM (COALESCE(a.acknowledged_at, NOW()) - a.created_at))::int/60 as ttack_minutes,\n  EXTRACT(EPOCH FROM (COALESCE(a.resolved_at, NOW()) - COALESCE(a.acknowledged_at, a.created_at)))::int/60 as ttres_minutes,\n  a.severity,\n  a.type,\n  a.title,\n  d.name as device\nFROM alerts a\nLEFT JOIN devices d ON a.device_id = d.id\nWHERE ($__timeFilter(a.created_at))\nORDER BY a.created_at DESC\nLIMIT 50",
          "refId": "A",
          "select": [
            [
              {
                "params": [
                  "created_at"
                ],
                "type": "column"
              }
            ]
          ],
          "table": "alerts",
          "timeColumn": "created_at",
          "where": []
        }
