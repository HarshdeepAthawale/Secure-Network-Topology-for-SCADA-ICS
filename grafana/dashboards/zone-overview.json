          "metricColumn": "none",
          "rawQuery": true,
          "rawSql": "SELECT\n  src_zone.name as source_zone,\n  dst_zone.name as dest_zone,\n  fr.protocol as protocol,\n  fr.port::text as port,\n  fr.action as status,\n  CASE WHEN fr.enabled THEN 'Enabled' ELSE 'Disabled' END as enabled,\n  fr.description\nFROM firewall_rules fr\nJOIN security_zones src_zone ON fr.source_zone_id = src_zone.zone_id\nJOIN security_zones dst_zone ON fr.destination_zone_id = dst_zone.zone_id\nORDER BY fr.source_zone_id, fr.destination_zone_id, fr.action DESC\nLIMIT 20",
