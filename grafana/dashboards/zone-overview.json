      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "postgres"
          },
          "format": "time_series",
          "group": [],
          "metricColumn": "none",
          "rawQuery": true,
          "rawSql": "SELECT\n  date_trunc('5 minutes', c.last_seen_at)::timestamp as time,\n  CASE\n    WHEN src_zone.name != dst_zone.name THEN src_zone.name || ' â†’ ' || dst_zone.name\n    ELSE 'Intra-Zone'\n  END as zone_pair,\n  AVG(c.latency_ms)::int as latency\nFROM connections c\nJOIN devices d1 ON c.source_device_id = d1.id\nJOIN devices d2 ON c.target_device_id = d2.id\nLEFT JOIN security_zones src_zone ON d1.security_zone = src_zone.zone_id\nLEFT JOIN security_zones dst_zone ON d2.security_zone = dst_zone.zone_id\nWHERE ($__timeFilter(c.last_seen_at))\n  AND c.latency_ms > 0\nGROUP BY time, zone_pair\nORDER BY time DESC",
          "refId": "A",
          "select": [
            [
              {
                "params": [
                  "latency_ms"
                ],
                "type": "column"
              }
            ]
          ],
          "table": "connections",
          "timeColumn": "created_at",
          "where": []
        }
      ],
      "title": "Inter-Zone Latency Analysis",
